<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo4"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity4">


        <Button
            android:id="@+id/anterior"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:background="@drawable/boton_regre"
            android:gravity="center"
            android:onClick="ante"
            android:text="ant"
            android:textSize="25sp"
            android:backgroundTint="#00FFFF"
            tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:background="#DA98ECD0"
            android:gravity="center"
            android:text="Animales"
            android:textColor="#000000"
            android:textSize="45sp"
            tools:ignore="HardcodedText"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/anterior"
            android:layout_toEndOf="@+id/anterior" />

        <GridView
            android:id="@+id/myGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnWidth="100dp"
            android:horizontalSpacing="10dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="10dp"
            android:layout_marginTop="100dp"/>


</RelativeLayout>